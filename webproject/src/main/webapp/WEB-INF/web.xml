<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://appengine.google.com/ns/1.0">
  <!--  Guice -->
  <filter>
    <filter-name>guiceFilter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>

  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Guice Servlet Context Listener -->
  <listener>
    <listener-class>com.google.sps.servlets.GuiceConfig</listener-class>
  </listener>

  <!-- Listings Servlet -->
  <servlet>
    <servlet-name>ListingsServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.ListingsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListingsServlet</servlet-name>
    <url-pattern>/listings</url-pattern>
  </servlet-mapping>

  <!-- My Rooms Servlet -->
  <servlet>
    <servlet-name>MyRoomsServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.MyRoomsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyRoomsServlet</servlet-name>
    <url-pattern>/myRooms</url-pattern>
  </servlet-mapping>

  <!-- Blobstore Servlets -->
  <servlet>
    <servlet-name>BlobstoreServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.BlobstoreServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BlobstoreServlet</servlet-name>
    <url-pattern>/blobstore</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FormHandlerServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.FormHandlerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FormHandlerServlet</servlet-name>
    <url-pattern>/my-form-handler</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- Room Servlet -->
  <servlet>
    <servlet-name>Room</servlet-name>
    <servlet-class>com.google.sps.servlets.RoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Room</servlet-name>
    <url-pattern>/room</url-pattern>
  </servlet-mapping>

  <!-- Username Servlet -->
  <servlet>
    <servlet-name>UsernameServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.UsernameServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsernameServlet</servlet-name>
    <url-pattern>/username</url-pattern>
  </servlet-mapping>

  <!-- Close Room Servlet -->
  <servlet>
    <servlet-name>CloseRoomServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.CloseRoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CloseRoomServlet</servlet-name>
    <url-pattern>/closeRoom</url-pattern>
  </servlet-mapping>

  <!-- Entry Servlet -->
  <servlet>
    <servlet-name>EntryServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.EntryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EntryServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- MyOrder Servlet -->
  <servlet>
    <servlet-name>MyOrderServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.MyOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyOrderServlet</servlet-name>
    <url-pattern>/myOrder</url-pattern>
  </servlet-mapping>

  <!-- Order Servlet -->
  <servlet>
    <servlet-name>OrderServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderServlet</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>

</web-app>
